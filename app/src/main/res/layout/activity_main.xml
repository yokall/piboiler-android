<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.markohare.layouttest2.MainActivity">



    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Room Temps"
        android:textSize="12pt"
        android:textAlignment="center"
        android:textStyle="bold"
        android:paddingBottom="5pt"
        />

    <TextView
        android:id="@+id/lblRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Room Temps"
        android:textSize="12pt"
        android:textAlignment="center"
        android:textStyle="bold"
        android:paddingBottom="5pt"
        />

    <TextView
        android:id="@+id/lblRoombtns"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Rooms"
        android:layout_below="@+id/lblRoom"
        android:layout_toLeftOf="@+id/lblCurrentTemp"
        android:layout_alignParentLeft="true"
        android:textSize="8pt"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textAlignment="center"



        />
    <TextView
        android:id="@+id/lbltarget"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Target"
        android:layout_below="@+id/lblRoom"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:textSize="8pt"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"


        />

    <TextView
        android:id="@+id/lblCurrentTemp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Current"
        android:layout_below="@+id/lblRoom"
        android:layout_toLeftOf="@+id/lbltarget"
        android:gravity="right"
        android:textSize="8pt"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"


        />

    <Button
        android:id="@+id/btnRoom1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/targettemp1"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/lblRoombtns"
        android:text="@string/room1"
        android:onClick="passTemp"
        />
    <TextView
        android:id="@+id/temp1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="12pt"
        android:text="16"
        android:drawableRight="@drawable/celsius"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/lbltarget"
        />

    <TextView
        android:id="@+id/targettemp1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="12pt"
        android:text="16"
        android:drawableRight="@drawable/celsius"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_toLeftOf="@+id/temp1"
        android:layout_below="@+id/lbltarget"
        />

    <Button
        android:id="@+id/btnRoom2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/targettemp2"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnRoom1"
        android:text="@string/room2"
        android:onClick="passTemp2"
        />

    <TextView
        android:id="@+id/temp2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/temp1"
        android:gravity="right"
        android:textSize="12pt"
        android:text="21"
        android:drawableRight="@drawable/celsius"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        />

    <TextView
        android:id="@+id/targettemp2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/temp2"
        android:layout_below="@+id/temp1"
        android:gravity="right"
        android:textSize="12pt"
        android:text="21"
        android:drawableRight="@drawable/celsius"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        />

    <Button
        android:id="@+id/btnRoom3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/targettemp3"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnRoom2"
        android:text="@string/room3"
        android:onClick="passTemp3"
        />
    <TextView
        android:id="@+id/temp3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/temp2"
        android:gravity="right"
        android:textSize="12pt"
        android:text="18"
        android:drawableRight="@drawable/celsius"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        />

    <TextView
        android:id="@+id/targettemp3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/temp3"
        android:layout_below="@+id/temp2"
        android:gravity="right"
        android:textSize="12pt"
        android:text="18"
        android:drawableRight="@drawable/celsius"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        />


    <Button
        android:id="@+id/btnRoom4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/targettemp4"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnRoom3"
        android:text="@string/room4"
        android:onClick="passTemp4"
        />

    <TextView
        android:id="@+id/temp4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/temp3"
        android:gravity="right"
        android:textSize="12pt"
        android:text="12"
        android:drawableRight="@drawable/celsius"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"


        />

    <TextView
        android:id="@+id/targettemp4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/temp4"
        android:layout_below="@+id/temp3"
        android:gravity="right"
        android:textSize="12pt"
        android:text="12"
        android:drawableRight="@drawable/celsius"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"


        />

    <Button
        android:id="@+id/boost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Boost"
        android:layout_below="@+id/btnRoom4"


        />
</RelativeLayout>
